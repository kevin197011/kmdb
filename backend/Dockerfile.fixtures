# 数据库测试数据 Dockerfile
FROM golang:1.23-alpine AS builder

WORKDIR /app

# 安装构建依赖
RUN apk add --no-cache git

# 复制 go mod 文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建测试数据工具
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o fixtures ./cmd/fixtures

# 运行阶段
FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

# 从构建阶段复制二进制文件
COPY --from=builder /app/fixtures .

# 运行测试数据脚本
CMD ["./fixtures"]
