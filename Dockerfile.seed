# 数据库种子 Dockerfile
FROM golang:1.23-alpine AS builder

WORKDIR /app

# 安装构建依赖
RUN apk add --no-cache git

# 复制 go mod 文件
COPY go.mod go.sum ./
RUN go mod download

# 复制源代码
COPY . .

# 构建种子工具
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o seed ./migrations/seed.go

# 运行阶段
FROM alpine:latest

RUN apk --no-cache add ca-certificates
WORKDIR /root/

# 从构建阶段复制二进制文件
COPY --from=builder /app/seed .

# 运行种子
CMD ["./seed"]

